 <androidx.cardview.widget.CardView
     android:layout_width="187dp"
     android:layout_height="168dp"
     android:elevation="6dp"
     app:cardCornerRadius="6dp"
     app:cardUseCompatPadding="true"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.0"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.0">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="4dp">

   <TextView
       android:id="@+id/textViewDoctorName"
       android:layout_width="297dp"
       android:layout_height="114dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="true"
       android:layout_marginTop="0dp"
       android:layout_marginBottom="0dp"
       android:text="Doctor Name"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="visible" />

   <TextView
       android:id="@+id/textViewDoctorSpecialty"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/textViewDoctorName"
       android:layout_alignParentTop="true"
       android:layout_marginTop="25dp"
       android:layout_marginBottom="65dp"
       android:text="Specialty"
       android:visibility="visible" />

   <TextView
       android:id="@+id/textViewDoctorAddress"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="false"
       android:layout_marginTop="45dp"
       android:layout_marginBottom="45dp"
       android:text="Address"
       android:visibility="visible" />

   <TextView
       android:id="@+id/textViewDoctorArea"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="false"
       android:layout_marginTop="65dp"
       android:layout_marginBottom="25dp"
       android:text="Area"
       android:visibility="visible" />

   <TextView
       android:id="@+id/textViewDoctorPhone"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="false"
       android:layout_marginTop="90dp"
       android:layout_marginBottom="10dp"
       android:text="Phone"
       android:visibility="visible" />

   <Button
       android:id="@+id/buttonViewDocProfile"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentBottom="true"
       android:layout_marginTop="110dp"
       android:layout_marginBottom="0dp"
       android:text="Visit Profile"
       android:visibility="visible" />

  </RelativeLayout>
 </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>